# Backend environment example
# Copy to backend/.env and fill in secrets

# Server
PORT=8000
NODE_ENV=development
CORS_ORIGIN=http://localhost:3002

# Database (must match docker-compose)
DATABASE_URL=postgresql://username:password@localhost:5432/bakery_inventory
# Optional: Prisma shadow DB for migrations
# SHADOW_DATABASE_URL=postgresql://username:password@localhost:5432/bakery_inventory_shadow

# Auth
JWT_SECRET=change-this-in-development
JWT_EXPIRES_IN=7d

# Logging
LOG_LEVEL=info
