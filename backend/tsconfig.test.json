{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": [
            "ES2020"
        ],
        "outDir": "./dist",
        "rootDir": ".",
        "strict": false,
        "noImplicitAny": false,
        "strictNullChecks": false,
        "strictFunctionTypes": false,
        "strictPropertyInitialization": false,
        "strictBindCallApply": false,
        "noImplicitThis": false,
        "alwaysStrict": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": false,
        "resolveJsonModule": true,
        "declaration": false,
        "declarationMap": false,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "@shared/*": [
                "../shared/*"
            ]
        }
    },
    "include": [
        "tests/**/*",
        "src/**/*",
        "../shared/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}